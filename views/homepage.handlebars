

{{#each blogs as |blog|}}
<div class="container">
  <div class="row">
    <div class="col-sm-4" id="blogTitle"><h3>{{blog.title}}</h3></div>
    <div class="col-sm-4" id="blogUser"><h5>{{blog.user.name}}</h5></div>
    <div class="col-sm-4" id="blogPostDate"><h5>{{format_date blog.post_date}}</h5></div>
  </div>
  <div class="row">
    <div class="col-sm" id="blogContent"><p>{{blog.content}}</p></div>
 {{#if current_user === blog.userId}}
  <div class="row">
    <button class="btn btn-danger" id="blog_delete" type="submit" value="Submit">
      Delete
    </button>
  </div>
  {{/if}}
</div>
{{!-- {{ > comment.handlebars}} --}}
<div class="container">
  <div class="row">
    <div class="col-sm-8" id="commentUserName"><p>{{blog.comment.user.email}}</p></div>
    <div class="col-sm-4" id=""></div>
  </div>
  <div class="row">
    <div class="col-sm" id="commentContent"><p>{{blog.comment.content}}</p></div>
  </div>
</div>
<div class="row">
    {{ > add-comment}}
  </div>
{{/each}}

<h1>Submit a new Blog Post here:</h1>
<form class="new-blog-form">
    
    <label for="blog_title">
      Blog Title:
    </label>
    <br />
    <textarea id="blog_title" name="blog_title" rows="2" cols="30">
     {{title}}
    </textarea>
    <br />
    <label for="blog_content">
    Content:
    </label>
    <br />
    <textarea id="blog_content" name="content" rows="5" cols="30">
     {{content}}
    </textarea>
    <br />

    <button class="btn btn-primary" id="blog_submit" type="submit" value="Submit">
      Submit
    </button>
  </form>